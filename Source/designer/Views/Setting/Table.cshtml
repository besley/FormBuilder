@{
    Layout = null;
}

<!-- the beginning of Adjust columns dialog-->
<div id="dialog-form-number-column">
    <div class="modal-body" style="padding:10px 40px 0 40px; min-height:150px;">
        <form>
            <label class="lang" as="columns" for="numberColumn"></label><span id="numberColumn">1</span>
            <div id="sliderNumberColumn"></div>
        </form>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-success lang" as="insert" data-dismiss="modal" onclick="tableManager.appendTable();"></a>
        <a href="#" class="btn lang" as="close" data-dismiss="modal"></a>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        kresource.localize();

        //#region initialize the slider parameter
        $("#sliderNumberColumn").slider({
            min: 1,
            max: 4,
            value: 1,
            slide: function (event, ui) {
                $("#numberColumn").html(ui.value);
            }
        });
        $("#numberColumn").html($("#sliderNumberColumn").slider("value"));
        //#endregion
    });
</script>
<!-- end of Adjust columns dialog-->

